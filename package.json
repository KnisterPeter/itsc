{
  "name": "itsc",
  "version": "0.1.0",
  "description": "An incremental typescript compiler interface",
  "main": "dist/index.js",
  "files": [
    "dist",
    "index.d.ts",
    "src"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc --sourceMap",
    "pretest": "npm run build",
    "test": "mocha --require source-map-support/register --recursive dist/",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -w",
    "preversion": "npm test",
    "version": "npm run build && conventional-changelog -p angular -v -r 0 > CHANGELOG.md && git add -A .",
    "postversion": "git push && git push --tags",
    "prepublish": "not-in-install && npm run build || echo 'In install cycle, skipping prepublish'",
    "precoverage": "npm run clean && tsc --inlineSourceMap",
    "coverage": "nyc --reporter lcov ./node_modules/.bin/mocha --recursive dist/",
    "watch:build": "tsc --watch --sourceMap",
    "watch:test": "mocha --watch --recursive dist/"
  },
  "repository": {
    "type": "git",
    "url": "KnisterPeter/itsc"
  },
  "author": {
    "name": "Markus Wolf",
    "email": "knister.peter@shadowrun-clan.de"
  },
  "license": "MIT",
  "devDependencies": {
    "chai": "3.5.0",
    "coveralls": "2.11.6",
    "cz-conventional-changelog": "1.1.5",
    "in-publish": "2.0.0",
    "mocha": "2.4.5",
    "nyc": "5.6.0",
    "rimraf": "2.5.2",
    "source-map-support": "0.4.0",
    "tslint": "3.5.0"
  },
  "dependencies": {
    "chokidar": "1.4.2",
    "minimist": "1.2.0",
    "tsdi": "0.9.4",
    "typescript": "1.8.2"
  },
  "publishConfig": {
    "tag": "next"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
